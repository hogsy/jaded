procedure_local void PRP_SetLight()
{
	idHalo=GFX_Add(21)                                 						//création du halo
	GFX_MaterialSet(idHalo,get_SFX_light_and_smoke,0)	 	// affectation du matériau
	GFX_Setf(idHalo,21000,3)              	         					// taille du halo
	GFX_Setf(idHalo,21004,100.0)                       					// taille du halo
	GFX_Seti(idHalo,21101,0xFFFFFFFF)         					// couleur du halo
	// switch on sound
	SND_RequestPlay(11)
}