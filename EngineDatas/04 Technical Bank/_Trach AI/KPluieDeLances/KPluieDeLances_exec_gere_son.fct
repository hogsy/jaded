#include "KPluieDeLances_defines.var"

if (AI_TriggerIsValid(tr_son))
{
	if (call_trigger( tr_son) )
	{
		if (i_ref_son == -1)
		{
			i_ref_son = SND_RequestPlayLoop(Ci_Groupe_Indigene_Sound_Id)
		}
	}
	else
	{
		if (i_ref_son != -1)
		{
			SND_Stop(i_ref_son)
			SND_Destroy(i_ref_son)	
			i_ref_son = -1
		}	
	}

}

