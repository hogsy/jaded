#define M_TestAreaTrig(_trigger, _prio, _cte_area, _gaolist)\
{\
	if(ti_prio > _prio)\
	{\
		if( AI_TriggerIsValid(_trigger)  )\
		{\
			if(_gaolist[0])\
			{\
				msg = AI_TriggerGetMsg(_trigger)\
				for(titi=0; titi<5; titi++)\
				{\
					msg.msg_gao1 = _gaolist[titi]\
					AI_TriggerSetMsg(_trigger, msg)\
					if(call_trigger(_trigger))\
					{\
						ti_prio = _prio\
						ti_area = _cte_area\
						break\
					}\
				}\
			}\
			else if( call_trigger(_trigger) ) \
			{\
				ti_prio = _prio\
				ti_area = _cte_area\
			}\
		}\
	}\
}
