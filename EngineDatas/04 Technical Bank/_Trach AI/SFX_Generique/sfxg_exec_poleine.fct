object	to_cam

//////////// POLEINE ////////////
////////////////////////////////////////
to_cam = @get_global o_camera
if(capa == Ci_sol_herbe || capa == Ci_sol_herbe_haute)
{
	@o_poleine OBJ_PosSet(@to_cam OBJ_PosGet() + (@to_cam OBJ_SightGet() * 5))
	@o_poleine OBJ_RotateGlobalZ(0.25 * TIME_GetDt())
	@o_poleine OBJ_FlagInvisibleSet(faux)
	@o_poleine OBJ_PagGeneratorFreqSet(1, 10)
}
else 
{
	@o_poleine OBJ_PagGeneratorFreqSet(1, 0)
}