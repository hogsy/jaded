object	to_obj
vector	tv_pos

VIEW_AssignObject(0)
to_obj = AI_MainActorGet(0)

tv_pos = @to_obj OBJ_PosGet() + cvector(0,0,1.8)
tv_pos -= sight * 4
OBJ_PosSet(tv_pos)

tv_pos = @to_obj OBJ_PosGet() + cvector(0,0,1.0)
tv_pos -= OBJ_PosGet()
OBJ_SightGeneralSet(tv_pos, cvector(0,0,1))

tv_pos = IO_JoyGetMove1()
if(MATH_AbsFloat(tv_pos.x) > 0.5)
	sight = MATH_VecRotate(sight, cvector(0,0,1), tv_pos.x * 3 * TIME_GetDt())