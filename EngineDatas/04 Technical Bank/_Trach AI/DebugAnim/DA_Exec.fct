
if( IO_ButtonJustPressed(JoyPSX_Button_carre) )
{
	i_action_cur ++ 
	
	if (i_action_cur == 50)
		i_action_cur = 0
		
	ACT_ActionSet(i_action_cur)
}

if( IO_ButtonJustPressed(JoyPSX_Button_rond) )
{
	i_action_cur -- 
	
	if (i_action_cur < 0)
		i_action_cur = 0
		
	ACT_ActionSet(i_action_cur)
}


if( IO_ButtonJustPressed(JoyPSX_Button_croix) )
{
	i_action_cur = 0
	
	ACT_ActionSet(i_action_cur)
}