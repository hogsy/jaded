#include "KTC_Defines.var"

OBJ_CapaSet(none, CAPA_Termine)

	mv_MyPos					= OBJ_PosGet()
	mv_DestPos				= @mo_MaximumZPosition OBJ_PosGet()
	mv_DirPos 					= MATH_VecNormalize( mv_DestPos - mv_MyPos)	

	if ( mi_mode_z_only)
		mv_DirPos = Cv_VerticalVector * MATH_FloatSign( MATH_VecDotProduct( mv_DirPos, Cv_VerticalVector))
	
	AI_TrackChange( C_TRACK_Wait, "KTC_BHV_Wait" )
	AI_TrackCurStop()