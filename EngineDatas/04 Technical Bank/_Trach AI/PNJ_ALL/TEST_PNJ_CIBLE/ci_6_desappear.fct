#define f_dest 0
// Apparition

#include "ci_defines.var"

i_cur_mode = Ci_mode_disparait
if (i_cur_mode != i_old_mode)
{
	// INIT
	i_old_mode = i_cur_mode
	v_pos_last = OBJ_PosGet() - (OBJ_BankingGet() * f_delta_H)
}

OBJ_PosSet(v_pos_last + (OBJ_BankingGet()*f_delta_H))
