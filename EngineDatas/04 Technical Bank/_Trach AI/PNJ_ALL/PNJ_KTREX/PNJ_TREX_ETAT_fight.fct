if (!tf_delay && f_time_start_etat > 0.5)
{
	// TEST POUR MORDRE
	if (i_flag_head_contact)
	{
		macro_change_etat("KT_ETAT_mord")
	}
	else
	{
		tv_temp = v_way_destpos
		tv_temp -= v_look_head_pos
		tv_temp.z = 0.0	
	
		tf_dist = MATH_VecDotProduct(tv_temp, tv_temp)

		if (tf_dist)
		{
			if (tf_dist < 4.0)
			{
				tf_dist = MATH_FloatSqrt(tf_dist)
				tv_temp /= tf_dist	
				
				if (EVENT_InteretPrecisionGet(mid_best_interet) == -1.0 || MATH_VecDotProduct(tv_temp, v_look_virtual_sight) > Cf_Cos60)
					macro_change_etat("KT_ETAT_mord")
			}
		}
		else
		{
			macro_change_etat("KT_ETAT_mord")
		}
	}	

#ifdef ALLOW_TERRASSE
	// TEST POUR TERRASSER
	if (i_flag_run && ! (OBJ_FlagsStatusGet() & OBJ_C_StatusFlag_Culled))
	{
		tv_temp = v_way_destpos
		tv_temp -= OBJ_PosGet()
	
		tf_dist = MATH_VecDotProduct(tv_temp, tv_temp)

		if (tf_dist > 9.0 && tf_dist	< 100.0)
		{
			tf_dist = MATH_FloatSqrt(tf_dist)	
			tv_temp /= tf_dist
		
