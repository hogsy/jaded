procedure_local void CR_Paf_Cumul_Add(float tf_dmg)
{
	if( CR_Is_Paf_Action() )
		return
	
	if( i_paf_cumul_nb < Ci_paf_cumul_max )
	{
		af_paf_cumul_dmg[i_paf_cumul_nb] = tf_dmg
		af_paf_cumul_time[i_paf_cumul_nb] = 0.75
		i_paf_cumul_nb++
	}
