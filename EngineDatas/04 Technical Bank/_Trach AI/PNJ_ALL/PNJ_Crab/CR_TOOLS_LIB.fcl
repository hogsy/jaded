procedure_local void CR_TagSize(int ti_on)
{
	vector		tv_tag_min
	vector	 	tv_tag_max
	
	if( ti_on )
	{
		if( i_modele == MODELE_Geant )
		{
			tv_tag_min = cvector(-2,-1 ,0)
			tv_tag_max = cvector(2,3,0)
		}
		else
		{
