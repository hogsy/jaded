#include "PNJ_TplS_defines.var"

if ( f_attente_time < f_attente_duree)
	return

AI_Execute("PNJ_TplS_ChuisLa")
if ( f_attente_time < (f_attente_duree + 0.5))
	return

AI_Execute("PNJ_TplS_Stimulus_Paf")
if (o_target_stimulus_paf)
{
	// On recoit un paf
	ChangeEtat(C_Mode_Paf)
}
	
AI_Execute("PNJ_TplS_Stimulus_Trigger")
if ( o_target_stimulus_trigger)
{
	// Stimulus trigger
	ChangeEtat(C_Mode_Attaque)
}