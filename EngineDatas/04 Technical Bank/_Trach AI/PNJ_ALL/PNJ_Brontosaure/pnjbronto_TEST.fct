#include "PNJ_Brontosaure_defs.var"

vector	tv_2pos, tv_2lead
object	to_main

//--------( Sortie Etat )--------
if (etat_i_quitte)
{
	etat_i_quitte = faux
	return
}

//--------( Entrée Etat )--------
if ( etat_i_courant != BRONTO_ETAT_follower_walk )
{
	etat_i_ancien = etat_i_courant
	etat_i_courant = BRONTO_ETAT_follower_walk
		
	//----( quitte état précédent )----
	if ( etat_fct )
	{
		etat_i_quitte = vrai
		AI_Execute( etat_fct )
	}
	
	//--------( init variable )------------------------------------------------------------------------------------
	etat_fct = AI_TrackCurGet()
	etat_f_timer = 0

//	ACT_ActionSet( BRONTO_ACT_wait )
	ACT_ActionSet( BRONTO_ACT_run )
}

to_main = AI_MainActorGet(C_ID_Joueur)

if ( ! IO_KeyPressed(VK_SPACE))
{
	i_flag_look = vrai
	v_look_pos = @to_main OBJ_PosGet()
}
