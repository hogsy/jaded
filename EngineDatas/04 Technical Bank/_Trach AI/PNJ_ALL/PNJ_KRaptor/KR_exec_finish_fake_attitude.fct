#include "KR_defines.var"

switch( ACT_ActionGet() )
{
	case Action_Ride_Attente :
		f_I_finish_fake_attitude_timer -= MATH_FloatMin(f_I_finish_fake_attitude_timer, TIME_GetDt())
		if( f_I_finish_fake_attitude_timer == 0.0 )
			ACT_ActionSet(Action_Ride_MordKong)
		break
		
	case Action_Ride_MordKong :
		if( ACT_ActionFinished() )
		{
			ACT_ActionSet(Action_Ride_Attente)
			f_I_finish_fake_attitude_timer = 0.5		// MATH_RandFloat(0.25, 0.75)
		}
		break
}

