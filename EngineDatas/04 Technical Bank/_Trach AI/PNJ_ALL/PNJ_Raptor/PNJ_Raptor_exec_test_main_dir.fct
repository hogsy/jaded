int					ti_flag_decremente_jauge

float				tf_dist
float				tf_speed
float				tf_delay

vector			tv_me_to_main
vector			tv_rapprochement_speed

// EST-CE QUE LE MAIN VIENT VERS MOI
ti_flag_decremente_jauge = vrai

tv_me_to_main = @o_main_actor OBJ_PosGet()
tv_me_to_main -= OBJ_PosGet()

f_me_to_main_dist = MATH_VecNorm(tv_me_to_main)

tf_dist = f_me_to_main_dist
if (tf_dist < 10.0)
{
	tv_me_to_main /= tf_dist

	tv_rapprochement_speed = DYN_SpeedGetVector()
	tv_rapprochement_speed -= @o_main_actor DYN_SpeedGetVector()

	tf_speed = MATH_VecDotProduct(tv_rapprochement_speed, tv_me_to_main)
	if (tf_speed > 0.0)
		tf_delay = tf_dist / tf_speed

	if (tf_dist < 4.0 || tf_delay < 2.0)
	{
		ti_flag_decremente_jauge = faux
		f_jauge_rapprochement += MATH_FloatMin(3.0 - f_jauge_rapprochement, 2.0 * TIME_GetDt())
	}
}

if (ti_flag_decremente_jauge)
	f_jauge_rapprochement -= MATH_FloatMin(f_jauge_rapprochement, TIME_GetDt())

