int		ti_i
int		ti_trigger

// Attente de la fin de l'affaissement ou du déclenchement de l'écroulement
ti_trigger = faux
if( AI_TriggerIsValid(Trig_Ecroulement) && call_trigger(Trig_Ecroulement) )
	ti_trigger = vrai
if( EVT_IsStopAll() || ti_trigger )
{
	if( ti_trigger )
	{
		// stopper l'affaissement et passer direct en écroulement !
		for( ti_i = 0; ti_i <= 4; ti_i++ )
			EVT_Stop(ti_i)
	}
	for( ti_i = 5; ti_i <= 9; ti_i++ )
		EVT_Play(ti_i)
	AI_TrackCurChangeNow("Kataclysm_Ecroulement")
}
