
procedure_local void PROC_MINE_DYN_OFF()
{
	if ( i_dyn_on)
	{
		i_dyn_on = faux
		DYN_Off()
	}
}
procedure_local void PROC_MINE_DYN_ON()
{
	if ( ! i_dyn_on)
	{
		i_dyn_on = vrai
		DYN_On()
		DYN_FlagsSet( DYN_C_BasicForces + DYN_C_GlobalFriction, none)
		DYN_GravitySet(Cv_NullVector)
		DYN_FrictionVectorSet(cvector( 2.0, 2.0, 2.0))
	}
}


procedure_ultra void Proc_Mine_Propulse( vector pv_sens)
{
	PROC_MINE_DYN_ON()
	DYN_SpeedSetVector( pv_sens)
}