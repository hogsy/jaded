 
vector	tv_delta

tv_delta = (OBJ_PosGet() - v_prev_pos) / (f_rayon)
if (MATH_VecNullEpsilon(tv_delta))
{
	if (!MATH_VecNullEpsilon(v_angular_speed))
	{
		f_c_est_la_crise_duree += TIME_GetDt()
		if (f_c_est_la_crise_duree > 0.25)
			c_est_la_crise = 1
	}
	else
		v_angular_speed = Cv_NullVector
}
else
{
	c_est_la_crise = 0
	f_c_est_la_crise_duree = 0.0
	OBJ_RotateGlobalX(-tv_delta.y)
	OBJ_RotateGlobalY(tv_delta.x)
}
