private object			o_tireur												// GAO qui tire sur la corde

private float				f_rotation_speed									// Vitesse de rotation
private float				f_delai_tire											// Temps de traction
private float				f_factor												// Facteur d'application de la traction de la corde
private float				f_traction											// Force de traction de la corde
private int				i_updating_peers									// Vrai si on met à jour la vitesse des voisins
private object			o_last_grabbed									// Dernière roue à avoir été tirée par la corde
private float				f_current_angle									// Angle courant (utilisé pour le snap)
private float				f_current_snap_delay							// Délai avant de ne plus coller à un crant

