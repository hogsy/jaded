int ti_idx

ti_idx = SND_M_GetAmbIdx(@ "univ" SND_gi_AmbiencePhase , @ "univ" SND_gi_AmbienceVariant )
if( mi_AmbienceIdx  != ti_idx )
{
	SND_M_Assert((2*ti_idx) >= SND_Cte_ArraySize, "[GST_SOUND] bad ambienceindex")
	SND_M_Assert(ti_idx < SND_Cte_ArraySize, "[GST_SOUND] bad ambienceindex")
	mi_AmbienceIdx  = ti_idx 
	SND_PlayLooped(mai_StreamInstance[mi_AmbienceIdx])
}