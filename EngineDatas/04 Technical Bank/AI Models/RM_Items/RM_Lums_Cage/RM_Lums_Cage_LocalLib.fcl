procedure_local void LUMS_CAGE_LumPositionnement()
{
	vector tv_sight
	vector tv_banking
	if( o_lum )
	{
		@o_lum OBJ_PosSet(Proc_LUMS_CAGE_LumPositionGet())
		tv_sight = @o_cage OBJ_SightGet()
		tv_banking = @o_cage OBJ_BankingGet()
		@o_lum OBJ_BankingGeneralSet(tv_sight, tv_banking)
	}
}
