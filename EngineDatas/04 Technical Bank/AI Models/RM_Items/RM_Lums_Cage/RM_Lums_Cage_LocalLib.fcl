procedure_local vector Proc_LUMS_CAGE_LumPositionGet()
{
	vector	tv_pos
//	tv_pos = OBJ_PosGet() + (0.4 * OBJ_BankingGet())
	tv_pos = @o_cage OBJ_PosGet() - (0.3 * @o_cage OBJ_BankingGet())
	return tv_pos
}

