//----------------------------------------------------------------------------------------------------------------------------------------
// 						DEPLACEMENT DYNAMIQUE DE L'OBJET
//----------------------------------------------------------------------------------------------------------------------------------------
procedure_local void PROC_SFX_DEBRIS_DEPLACE_MODULE()
{
	vector	tv_pos, tv_rot
	float		tf_temp
	
	v_dir.x += v_gravite.x * TIME_GetDt()
	v_dir.y += v_gravite.y * TIME_GetDt()
	v_dir.z += v_gravite.z * TIME_GetDt()

	OBJ_RotateLocal(v_rot * TIME_GetDt())

	tv_pos = v_pos
	v_pos = tv_pos + v_dir
	OBJ_PosSet(v_pos)
}


//----------------------------------------------------------------------------------------------------------------------------------------
// 									PROCEDURE ULTRA D'INITIALISATION
//----------------------------------------------------------------------------------------------------------------------------------------
procedure_ultra void PROC_SFX_DEBRIS_SET(vector tv_pos, vector tv_dir, vector tv_gravite, vector tv_rot, float tf_timer, float tf_taille, float tf_haut)
{
	v_pos = tv_pos
	v_dir = tv_dir
	v_gravite = tv_gravite
	v_rot = tv_rot
	f_timer = tf_timer
	f_taille = tf_taille

	f_timer_loop = 0.0
	b_activ = vrai
}

