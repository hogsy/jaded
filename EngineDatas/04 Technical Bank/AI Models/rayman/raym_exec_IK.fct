#include "r_defines.var"

object to_hand
float		tf_offset, tf_offset2

if ( f_joy_grappin_pressed > Cf_Use_Joy_Delai)
{
	to_hand = ANI_CanalObjectGet( Anim_Canal_MainGauche)
	tf_offset = MATH_Cos(TIME_Get() * 20.0) * 0.4
	tf_offset2 = MATH_Sin(TIME_Get() * 20.0) * 0.4
	@to_hand OBJ_PosSet( OBJ_PosGet() + (OBJ_BankingGet() * ( 0.8 + tf_offset)) + (OBJ_HorizonGet() * 0.3) + (OBJ_SightGet() * tf_offset2))
}